<div class="modal-content">
  <div class="modal-header">
    <div id="modal-title" style="display:flex;justify-content:center;text-align:center;">
      <h3 class="modal-title" id="myModalLabel">Add Participants</h3>
    </div>
    <button type="button" class="btn btn-icon-close" data-dismiss="modal" aria-label="Close"><i class="fas fa-times"></i></button>
  </div>
  <div class='centered-item'>
    <ul class="nav nav-tabs">
      <li role="presentation"><a href="#import" data-toggle="tab" class="active">Import CSV</a></li>
      <li role="presentation"><a href="#form" data-toggle="tab" id='completed_tab'>Form</a></li>
    </ul>
  </div>
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="import">
      <div class='centered-item'>
        <%= form_tag import_for_training_path(@training), multipart: true, class: 'flex-row-between-centered' do %>
          <%= file_field_tag :file %>
          <%= submit_tag 'Import CSV', class: 'btn btn-edit', style: 'margin: 0 !important;' %>
        <% end %>
      </div>
    </div>
    <div role="tabpanel" class="tab-pane" id="form">
      <%= simple_form_for :attendees, url: attendee_create_all_path do |f| %>
        <div class="flex-column-between-centered">
          <%= f.text_area :list, placeholder: 'Entrer un nom de participant par ligne, sous la forme suivante : prÃ©nom,nom,email' %>
          <%= f.submit 'Submit' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

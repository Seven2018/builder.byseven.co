<div id="container-login">

  <div class="login">

    <div id="login-div">

      <div class="login-title flex-row-around-centered">

        <h2>Builder by</h2>
        <img src="https://byseven.co/assets/img/LOGO_SEVEN.png" alt="" height='50px'>

      </div>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

        <%= f.error_notification %>

        <div class="form-inputs mb-2rem">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>

        <div class="d-flex justify-content-center">
          <%= f.button :submit, "Send me instructions", class: 'btn-edit-yellow' %>
        </div>

      <% end %>

      <div class="d-flex mt-2rem">

        <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post do %>

          <div class="google-btn">

            <div class="google-icon-wrapper">
              <img class="google-icon" src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"/>
            </div>

            <p class="btn-text"><b>Sign in with Google</b></p>

          </div>

        <% end %>

      </div>

    </div>

  </div>

</div>
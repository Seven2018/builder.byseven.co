<div id="container-login">

  <div class="login">

    <div id="login-div">

      <div class="login-title flex-row-around-centered">

        <h2>Builder by</h2>
        <img src="https://byseven.co/assets/img/LOGO_SEVEN.png" alt="" height='50px'>

      </div>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

        <%= f.error_notification %>

        <div class="form-inputs mb-2rem">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>

        <div class="d-flex justify-content-center">

          <button type="submit"
                  class="bld-btn-yellow">
            Send me instructions
          </button>

        </div>

      <% end %>

      <div class="d-flex justify-content-between align-items-center mt-2rem">

        <%= link_to new_user_session_path, class: "bld-btn-white-dark-grey" do %>

          Log in

        <% end %>

        <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post do %>

          <div class="bld-btn-google">

            <img class="width-2rem height-2rem mr-1rem"
                 src="https://upload.wikimedia.org/wikipedia/commons/5/53/Google_%22G%22_Logo.svg"/>

            Sign in with Google

          </div>

        <% end %>

      </div>

    </div>

  </div>

</div>
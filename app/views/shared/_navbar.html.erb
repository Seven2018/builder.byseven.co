<div class="navbar-builder navbar-expand-sm navbar-light">
  <% if user_signed_in? %>

    <%= link_to trainings_path do %>
      <%= image_tag('SEVENLOGO_SQUARE4.png', width:'45px', height:'30px', style:'margin-right:3rem;') %>
    <% end %>

    <div id="navbar-builder-links"
         class="d-flex justify-content-between align-items-center height-5rem">

        <% if params[:controller] == 'trainings' || params[:controller] == 'sessions' || params[:controller] == 'workshops' || params[:controller] == 'workshop_modules'%>

          <%= link_to trainings_path, class: 'left-buttons d-flex align-items-center height-5rem mx-2rem p-0 isactive' do %>
            <p class="fs-1_4rem font-weight-600 smooth-transition bld-yellow">Trainings</p>
          <% end %>

        <% else %>

          <%= link_to trainings_path, class: 'left-buttons d-flex align-items-center height-5rem mx-2rem p-0' do %>
            <p class="fs-1_4rem font-weight-600 smooth-transition bld-dark-grey">Trainings</p>
          <% end %>

        <% end %>

        <% if ['super_admin', 'admin', 'training manager'].include? current_user.access_level %>

          <% if params[:action] == 'contents' || params[:controller] == 'contents' %>

            <%= link_to contents_path, class: 'left-buttons d-flex align-items-center height-5rem mx-2rem p-0 isactive' do %>
              <p class="fs-1_4rem font-weight-600 smooth-transition bld-yellow">Workshops</p>
            <% end %>

          <% else %>

            <%= link_to contents_path, class: 'left-buttons d-flex align-items-center height-5rem mx-2rem p-0' do %>
              <p class="fs-1_4rem font-weight-600 smooth-transition bld-dark-grey">Workshops</p>
            <% end %>

          <% end %>

        <% end %>

        <% if ['super_admin', 'admin', 'training manager'].include? current_user.access_level %>

          <% if params[:controller] == 'theories' || params[:action] == 'theories' %>

            <%= link_to theories_path, class: 'left-buttons d-flex align-items-center height-5rem mx-2rem p-0 isactive' do %>
              <p class="fs-1_4rem font-weight-600 smooth-transition bld-yellow">Theories</p>
            <% end %>

          <% else %>

            <%= link_to theories_path, class: 'left-buttons d-flex align-items-center height-5rem mx-2rem p-0' do %>
              <p class="fs-1_4rem font-weight-600 smooth-transition bld-dark-grey">Theories</p>
            <% end %>

          <% end %>

          <% if params[:action] == 'users' || params[:controller] == 'users' %>

            <%= link_to users_path, class: 'left-buttons d-flex align-items-center height-5rem mx-2rem p-0 isactive' do %>
              <p class="fs-1_4rem font-weight-600 smooth-transition bld-yellow">Users</p>
            <% end %>

          <% else %>

            <%= link_to users_path, class: 'left-buttons d-flex align-items-center height-5rem mx-2rem p-0' do %>
              <p class="fs-1_4rem font-weight-600 smooth-transition bld-dark-grey">Users</p>
            <% end %>

          <% end %>

          <% if params[:action] == 'companies' || params[:controller] == 'companies' %>

            <%= link_to client_companies_path, class: 'left-buttons d-flex align-items-center height-5rem mx-2rem p-0 isactive' do %>
              <p class="fs-1_4rem font-weight-600 smooth-transition bld-yellow">Clients</p>
            <% end %>

          <% else %>

            <%= link_to client_companies_path, class: 'left-buttons d-flex align-items-center height-5rem mx-2rem p-0' do %>
              <p class="fs-1_4rem font-weight-600 smooth-transition bld-dark-grey">Clients</p>
            <% end %>

          <% end %>

           <% if params[:action] == 'actions' || params[:controller] == 'actions' %>

            <%= link_to actions_path, class: 'left-buttons d-flex align-items-center height-5rem mx-2rem p-0 isactive' do %>
              <p class="fs-1_4rem font-weight-600 smooth-transition bld-yellow">Actions</p>
            <% end %>

          <% else %>

            <%= link_to actions_path, class: 'left-buttons d-flex align-items-center height-5rem mx-2rem p-0' do %>
              <p class="fs-1_4rem font-weight-600 smooth-transition bld-dark-grey">Actions</p>
            <% end %>

          <% end %>

          <% if params[:action] == 'report' || params[:controller] == 'report'  %>

            <%= link_to report_path, class: 'left-buttons d-flex align-items-center height-5rem mx-2rem p-0 isactive' do %>
              <p class="fs-1_4rem font-weight-600 smooth-transition bld-yellow">Reports</p>
            <% end %>

          <% else %>

            <%= link_to report_path, class: 'left-buttons d-flex align-items-center height-5rem mx-2rem p-0' do %>
              <p class="fs-1_4rem font-weight-600 smooth-transition bld-dark-grey">Reports</p>
            <% end %>

          <% end %>

        <% end %>

        <% if ['sevener+', 'sevener'].include? current_user.access_level %>

          <% if params[:action] == 'billing' %>

            <%= link_to billing_path(user_id: current_user), class: 'left-buttons d-flex align-items-center height-5rem mx-2rem p-0 isactive' do %>
              <p class="fs-1_4rem font-weight-600 smooth-transition bld-yellow">Billing</p>
            <% end %>

          <% else %>

            <%= link_to billing_path(user_id: current_user), class: 'left-buttons d-flex align-items-center height-5rem mx-2rem p-0' do %>
              <p class="fs-1_4rem font-weight-600 smooth-transition bld-dark-grey">Billing</p>
            <% end %>

          <% end %>

        <% end %>


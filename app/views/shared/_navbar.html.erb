  <% end %>

  <div class="d-flex justify-content-between align-items-center">

    <div class="dropdown show">

      <a id="dropdownMenuLogout" 
         class="navbar-user-card dropdown-toggle flex-row-between-centered"
         href="#"
         role="button"
         data-toggle="dropdown"
         aria-haspopup="true"
         aria-expanded="false">

        <img src="<%= current_user.picture %>" alt="<%= current_user.fullname %>" class='avatar' onerror='this.onerror=null;this.src="<%= asset_url('empty-avatar.png', type: :image) %>";'>

      </a>

      <div id='dropdown-user-menu'
           class="dropdown-menu dropdown-menu-right"
           aria-labelledby="dropdownMenuLogout">

        <div class="dropdown-card">

          <div class="border-bottom-bld-light-grey">

            <p><%= current_user.fullname%></p>
            <h6><%= current_user.email%></h6>

          </div>

        </div>

        <div class="dropdown-card">
          <%= link_to user_path(current_user) do %>
                <h6>Profile</h6>
          <% end %>
        </div>

        <div class="dropdown-card flex-row-between-centered">
          <%= link_to destroy_user_session_path, method: :delete do %>
            <h6>Log out</h6>
          <% end %>
        </div>

      </div>

    </div>

  </div>

</div>

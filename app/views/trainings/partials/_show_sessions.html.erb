<div class="card-lg-mobile card-lg-mobile-empty">

  <div class="card-main-lg-mobile" ondblclick="doubleClick(this)">

    <div class="card-session-header-mobile">

      <div>
        <i class="fas fa-plus-circle"></i>
        <p>Add a Session</p>
      </div>

    </div>

  </div>

</div>
